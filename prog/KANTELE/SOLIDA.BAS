110 COLOR 11: CLS

120 PRINT "*****************************************************************"

130 PRINT

140 PRINT " PROGRAM TO CALCULATE THE SOLID ANGLE SUBTENDED BY TWO CON-"

150 PRINT " CENTRIC RINGS HAVING POLAR ANGLES A1 AND A2, OR BY A CIRCULAR"

160 PRINT " DETECTOR (DIAMETER = D) AT DISTANCE R FROM A POINT SOURCE."

170 PRINT " BEFORE STARTING, PRESS DOWN CAPS-LOCK."

180 PRINT

190 PRINT "*****************************************************************"

200 PRINT

210 INPUT " ANGLES OR DIST. (A OR D) = ", A$

220 IF A$ = "A" GOTO 230 ELSE 280

230 PRINT

240 INPUT " POLAR ANGLES A1(max), A2 (min) (degr.) = ", A1, A2

250 IF A1 < A2 THEN PRINT : PRINT " A1 MUST BE LARGER THAN A2!": GOTO 230

260 LET O = -.5 * (COS(A1 / 57.2958) - COS(A2 / 57.2958)): GOTO 310

270 IF A$ = "D" THEN 280 ELSE 210

280 PRINT

290 INPUT " DISTANCE AND DETECTOR DIAMETER, R, D  (mm) = ", R, D

300 O = .5 * (1 - R / (SQR(R ^ 2 + .25 * D ^ 2)))

310 P = 100 * O

320 PRINT

330 PRINT USING " SOLID ANGLE OMEGA/4*PI = ##.###^^^^ = ##.###^^^^ % "; O; P

340 PRINT

350 COLOR 12: PRINT " TO QUIT, JUST HIT CTRL-C ": COLOR 11

360 GOTO 180

370 END



