105 COLOR 11: CLS

110 PRINT "****************************************************************"

115 PRINT

120 PRINT "PROGRAM TO CALCULATE RMS ANGLE FOR MULTIPLE SCATTERING"

130 PRINT "OF CHARGED PARTICLES AND PARTICLE BEAMS"

140 PRINT

150 PRINT "****************************************************************"

160 PRINT

170 PRINT "ENTER THE FOLLOWING QUANTITIES:"

180 PRINT

190 INPUT "Z AND A OF THE TARGET ATOM, (Z, A) = ", Z, A

200 PRINT

210 INPUT "CHARGE OF THE PROJECTILE (IN UNITS OF e) = ", Q

220 PRINT

230 INPUT "ENERGY OF THE PROJECTILE (IN MeV) = ", T

240 PRINT

250 INPUT "TARGET THICKNESS (IN mg/cm^2) = ", D

260 REM

270 LET K = .0393 / 1000 * Z * (Z + 1) * Q ^ 2 * D / A / T ^ 2

280 LET B = 2.119 * Z ^ (-5 / 3) * (Z + 1) * D / A

290 LET F = SQR(K * (LOG(B) + 11.51))

300 LET G = F * 57.3

310 PRINT

320 PRINT USING "RMS SCATTERING  ANGLE = ##.##^^^^ DEG. = ##.##^^^^ RAD."; G; F

330 PRINT

340 COLOR 12: PRINT "TO QUIT, JUST HIT CTRL-C ": COLOR 11

350 PRINT "****************************************************************"

360 GOTO 160



