100 REM   ANASTATE.BAS           AUGUST 1, 1992     J. KANTELE

110 COLOR 10: CLS

120 PRINT "****************************************************************"

130 PRINT

140 PRINT " PROGRAM TO CALCULATE THE COULOMB-DISPLACEMENT ENERGY BETWEEN"

150 PRINT " ANALOG STATES, AND THE EXCITATION ENERGY (IN THE ANALOG NUCLEUS)"

160 PRINT " OF THE PARENT GROUND-STATE ANALOG. THE CODE IS BASED ON THE"

170 PRINT " COMPILATION BY ANTHONY et al. [An88]. THE Z RANGE IS 3 TO 239."

180 PRINT " THE UNCERTAINTY IS MOSTLY < 0.1 MeV; ERRORS > 0.2 MeV ARE"

190 PRINT " POSSIBLE BUT VERY RARE. FOR ACCURATE RESULTS, CONSULT [An88]."

200 PRINT

210 PRINT "****************************************************************"

220 PRINT

230 INPUT " ATOMIC NUMBER OF PARENT NUCLEUS, Z(<) =  Z(p) = ", Z

240 PRINT

250 INPUT " MASS-NUMBER OF THE ISOBAR CHAIN A = ", A

260 PRINT

270 PRINT " YOU HAVE THREE OPTIONS FOR THE EXCITATION-ENERGY CALCULATION:"

280 PRINT

290 PRINT " (1) GIVE THE ENERGY DIFFERENCE OF THE GROUND-STATES, E(a) - E(p)"

300 PRINT " (2) GIVE THE TWO GROUND-STATE MASSES, M(a) AND M(p)"

310 PRINT " (3) SKIP THE EXCITATION ENERGY CALCULATION ALTOGETHER"

320 PRINT

330 INPUT " YOUR CHOICE (1, 2, OR 3) = ", N

340 PRINT : DELTA = 1.412 * ((Z + .5) / A ^ (1 / 3)) - .861

350 ON N GOTO 360, 380, 400

360 INPUT " GIVE THE GROUND-STATE ENERGY DIFFERENCE (MeV), E(a) - E(p) = ", E

370 PRINT : GOTO 410

380 INPUT " GIVE THE GROUND-STATE MASSES (a.m.u.) M(a), M(p) = ", MA, MP

390 E = 931.49 * (MA - MP): PRINT : GOTO 410

400 GOTO 440

410 EX = DELTA - E - .782

420 PRINT USING " THE EXCITATION ENERGY OF THE G.S. ANALOG = ##.## MeV "; EX

430 PRINT

440 PRINT USING " COULOMB DISPLACEMENT ENERGY  = ##.## MeV "; DELTA

450 PRINT

460 COLOR 11: PRINT " TO QUIT, JUST HIT CTRL-C": COLOR 10

470 GOTO 200

