100 REM     Z-A-REL.BAS         JULY 28, 1990             J. KANTELE

110 CLS

120 PRINT "*****************************************************************"

130 PRINT

140 PRINT "PROGRAM TO COMPUTE ATOMIC WEIGHT 'A' FOR A GIVEN ELEMENT 'Z'."

150 PRINT "THE REGION OF VALIDITY IS  2 < Z < 93."

160 PRINT

165 PRINT "THE PROGRAM IS INTENDED FOR FORMULAE NEEDING A = A(Z);"

170 PRINT "FOR A GIVEN 'Z', 'A' IS OBTAINED TO ABOUT 3 PER CENT OR BETTER."

180 PRINT

190 PRINT "*****************************************************************"

200 PRINT

210 INPUT "ATOMIC NUMBER Z = ", Z

220 FOR I = 1 TO 6

230 READ Z(I), C(I)

250 DATA 9,1.047,11,1.036,18,1.065,20,.952,23,1.035,34,1.033

260 IF Z = Z(I) THEN C = C(I): GOTO 280

270 NEXT I

285 C = 1

280 A = C * EXP(1.4594 + .21579 * LOG(Z) + .24867 * LOG(Z) ^ 2 - .02225 * LOG(Z) ^ 3)

290 PRINT

300 PRINT USING "Z = ##; A = ###.#"; Z; A

310 RESTORE

320 GOTO 180





