100 REM    COMPTON.BAS        AUGUST 3, 1992           J. KANTELE

110 COLOR 14, 4: CLS

120 PRINT "****************************************************************"

130 PRINT

140 PRINT " PROGRAM TO CALCULATE RARAMETERS IN COMPTON SCATTERING"

150 PRINT

160 PRINT "****************************************************************"

170 PRINT

180 INPUT " ENTER GAMMA-RAY ENERGY (keV), E = ", E

190 PRINT

200 INPUT " SCATTERING ANGLE (DEGR.), THETA = ", T

210 PRINT

220 E2 = E / (1 + E * (1 - COS(T / 57.2958)) / 511)

230 E3 = E - E2

240 X = E / SQR(E3 ^ 2 + 2 * E3 * 511) * SIN(T / 57.2958)

250 PHI = ATN(X / SQR(-X * X + 1)) * 57.2958

260 PRINT

270 PRINT USING " ENERGY OF SCATTERED QUANTUM = #####.## keV"; E2

280 PRINT

290 PRINT USING " ENERGY OF COMPTON ELECTRON = #####.## keV"; E3

300 PRINT

310 PRINT USING " EMISSION ANGLE OF ELECTRON = ###.## DEGR."; PHI

320 GOTO 150

330 END



