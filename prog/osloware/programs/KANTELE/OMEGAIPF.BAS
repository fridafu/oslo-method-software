480 IF E < 1022 THEN PRINT " IPF IS NOT ENERGETICALLY POSSIBLE!": GOTO 450

490 KE = E / 511

500 S = (KE - 2) / (KE + 2)

510 B = 1.178 * (1 - .25 * S - .125 * S ^ 2 + .0625 * S ^ 3 - .0156 * S ^ 4 + .0098 * S ^ 5)

520 FOR J = 1 TO 11

